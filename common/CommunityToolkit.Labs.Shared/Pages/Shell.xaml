<Page x:Class="CommunityToolkit.Labs.Shared.Pages.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.Labs.Shared.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar x:Name="titleBar"
                           Title="Toolkit Labs Gallery"
                           BackButtonClick="TitleBar_BackButtonClick"
                           Icon="ms-appx:///Assets/Images/LabsIcon.png" />
        <muxc:NavigationView x:Name="NavView"
                             Grid.Row="2"
                             IsBackButtonVisible="Collapsed"
                             ItemInvoked="NavView_ItemInvoked">
            <Frame x:Name="NavigationFrame" />
            <muxc:NavigationView.AutoSuggestBox>
                <AutoSuggestBox AutomationProperties.Name="Search"
                                PlaceholderText="Search Labs"
                                QueryIcon="Find" />
            </muxc:NavigationView.AutoSuggestBox>
        </muxc:NavigationView>
    </Grid>
</Page>
