<Project Sdk="MSBuild.Sdk.Extras/3.0.23">
  <Import Project="$(RepositoryDirectory)common\Labs.MultiTarget.props" />

  <PropertyGroup>
    <RootNamespace>CommunityToolkit.Labs.WinUI.SizerBaseRns</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>CommunityToolkit.Labs.$(PackageIdVariant).SizerBase</PackageId>
    <Description>
      This package contains SizerBase.
    </Description>
    <Version>0.0.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="obj\bin\**" />
    <Content Remove="obj\bin\**" />
    <EmbeddedResource Remove="obj\bin\**" />
    <None Remove="obj\bin\**" />
    <Page Remove="obj\bin\**" />
    <UpToDateCheckInput Remove="obj\bin\**" />
  </ItemGroup>
</Project>
