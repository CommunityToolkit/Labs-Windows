<Page
    x:Class="SettingsControlsExperiment.Samples.SettingsCardControlSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Spacing="32">
        <labs:SettingsCard
            Description="Windows and apps might use your country or region to give you local content"
            Header="Country or region"
            Icon="&#xF49A;"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <ComboBox SelectedIndex="0">
                <ComboBoxItem>United States</ComboBoxItem>
                <ComboBoxItem>The Netherlands</ComboBoxItem>
                <ComboBoxItem>Germany</ComboBoxItem>
            </ComboBox>
        </labs:SettingsCard>


        <labs:SettingsCard
            Description="Microsoft Store apps will appear in the first supported languages in this list"
            Header="Preferred languages"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <Button Content="Add a new language" Style="{StaticResource AccentButtonStyle}" />
        </labs:SettingsCard>

        <labs:SettingsCard
            Header="Personalize your lockscreen"
            Icon="&#xEE3F;"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <ComboBox SelectedIndex="0">
                <ComboBoxItem>Windows spotlight</ComboBoxItem>
                <ComboBoxItem>Picture</ComboBoxItem>
                <ComboBoxItem>Slideshow</ComboBoxItem>
            </ComboBox>
        </labs:SettingsCard>

        <labs:SettingsCard
            Header="Phone Link"
            Icon="&#xE1C9;"
            IsEnabled="{x:Bind IsCardEnabled, Mode=OneWay}">
            <labs:SettingsCard.Description>
                <HyperlinkButton Content="Learn more about Phone Link" />
            </labs:SettingsCard.Description>
            <Button Content="Open Phone Link" />
        </labs:SettingsCard>
    </StackPanel>
</Page>
