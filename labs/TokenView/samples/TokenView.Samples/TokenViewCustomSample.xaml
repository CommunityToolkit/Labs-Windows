<Page x:Class="TokenViewExperiment.Samples.TokenViewCustomSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:local="using:TokenViewExperiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <StackPanel Spacing="15">
        <labs:TokenView Orientation="{x:Bind local:TokenViewCustomSample.ConvertStringToOrientation(LayoutOrientation), Mode=OneWay}">
            <TextBlock Text="1" />
            <TextBlock Text="2" />
            <TextBlock Text="3" />
            <TextBlock Text="4" />
            <TextBlock Text="5" />
            <TextBlock Text="6" />
        </labs:TokenView>
    </StackPanel>
</Page>
