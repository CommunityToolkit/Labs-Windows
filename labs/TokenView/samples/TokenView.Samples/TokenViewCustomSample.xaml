<Page x:Class="TokenViewExperiment.Samples.TokenViewCustomSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:local="using:TokenViewExperiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>

        <labs:TokenView
                CanRemoveTokens="True"
                Orientation="Horizontal"
                SelectedIndex="2"
                SelectionMode="Single">
            <labs:TokenViewItem Content="All" />
            <labs:TokenViewItem Content="Work" IsClosable="True" />
            <labs:TokenViewItem Content="Apps" IsClosable="False" />
            <labs:TokenViewItem Content="Documents" IsClosable="False" />
            <labs:TokenViewItem Content="Web"/>
            <labs:TokenViewItem Content="Settings"/>
            <labs:TokenViewItem Content="People" />
            <labs:TokenViewItem Content="Folders" />
            <labs:TokenViewItem Content="Photos" />
        </labs:TokenView>
    </Grid>
</Page>
