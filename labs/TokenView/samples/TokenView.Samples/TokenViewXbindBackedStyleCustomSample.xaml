<Page x:Class="TokenViewExperiment.Samples.TokenViewXbindBackedStyleCustomSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Import custom styles  -->
                <labs:TokenViewStyle_xBind />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Spacing="16">
        <labs:TokenView_xBind FontFamily="{x:Bind TextFontFamily, Mode=OneWay}"
                                    FontSize="{x:Bind TextSize, Mode=OneWay}"
                                    Foreground="{x:Bind TextForeground, Mode=OneWay}"
                                    Style="{StaticResource CustomxBindTokenViewStyle}"
                                    Visibility="{x:Bind IsTextVisible, Mode=OneWay}" />
    </StackPanel>
</Page>
