<Project Sdk="Microsoft.NET.Sdk">
  <!-- Labs Constants -->
  <Import Project="$(RepositoryDirectory)common\Labs.TargetFrameworks.props" />
  <PropertyGroup>
    <IsDeployableHead>true</IsDeployableHead>
    <IsUno>true</IsUno>
    <IsWasm>false</IsWasm>
    <IsWasmHead>false</IsWasmHead>
    <IsWasmLib>false</IsWasmLib>
    <IsDroid>false</IsDroid>
    <IsMacOS>false</IsMacOS>
    <IsiOS>false</IsiOS>
    <IsUwp>false</IsUwp>
    <IsWinAppSdk>false</IsWinAppSdk>
    <IsWpf>false</IsWpf>
    <IsWpfHead>false</IsWpfHead>
    <IsWpfLib>false</IsWpfLib>
    <IsGtk>true</IsGtk>
    <IsGtkHead>true</IsGtkHead>
    <IsGtkLib>false</IsGtkLib>
  </PropertyGroup>
  <Import Project="$(RepositoryDirectory)common\Labs.ProjectIdentifiers.props" />

  <!-- Labs Platform Config -->
  <Import Project="$(RepositoryDirectory)common\Labs.Uno.props" />

  <!-- Labs Project Config -->
  <Import Project="$(RepositoryDirectory)common\Labs.Head.props" />
  <Import Project="$(RepositoryDirectory)common\Labs.Head.Uno.props" />
  <Import Project="$(RepositoryDirectory)common\MultiTarget\Generated\*.props" />

  <PropertyGroup>
    <OutputType Condition="'$(Configuration)'=='Release'">WinExe</OutputType>
    <OutputType Condition="'$(Configuration)'=='Debug'">Exe</OutputType>
    <TargetFramework>$(LinuxHeadTargetFramework)</TargetFramework>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <ItemGroup Condition="exists('..\CommunityToolkit.Labs.UWP')">
    <EmbeddedResource Include="..\CommunityToolkit.Labs.UWP\Package.appxmanifest" LogicalName="Package.appxmanifest" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="$(RepositoryDirectory)\common\CommunityToolkit.Labs.Shared\Assets\StoreLogo.png" Link="Assets\StoreLogo.png" />
    <Content Include="Assets\Fonts\uno-fluentui-assets.ttf" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="5.0.0" />
    <PackageReference Include="Uno.UI.Adapter.Microsoft.Extensions.Logging" Version="4.1.8" />
  </ItemGroup>
</Project>
