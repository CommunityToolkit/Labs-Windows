<Page x:Class="WrapPanel2Experiment.Samples.WrapPanel2ProportionalSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WrapPanel2Experiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Border Padding="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            CornerRadius="8">
        <Border.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="6" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </Border.Resources>

        <controls:WrapPanel2 HorizontalAlignment="Stretch"
                             ItemSpacing="2">
            <Border controls:WrapPanel2.LayoutLength="6*"
                    Background="#A7FA95">
                <TextBlock HorizontalAlignment="Center"
                           Foreground="Black"
                           Text="OP Code (6 bits)" />
            </Border>
            <Border controls:WrapPanel2.LayoutLength="5*"
                    Background="#FE8482">
                <TextBlock HorizontalAlignment="Center"
                           Foreground="Black"
                           Text="RS (5 bits)" />
            </Border>
            <Border controls:WrapPanel2.LayoutLength="5*"
                    Background="#FE8482">
                <TextBlock HorizontalAlignment="Center"
                           Foreground="Black"
                           Text="RS (5 bits)" />
            </Border>
            <Border controls:WrapPanel2.LayoutLength="16*"
                    Background="#F8FC8B">
                <TextBlock HorizontalAlignment="Center"
                           Foreground="Black"
                           Text="Immediate (16 bits)" />
            </Border>
        </controls:WrapPanel2>
    </Border>
</Page>
