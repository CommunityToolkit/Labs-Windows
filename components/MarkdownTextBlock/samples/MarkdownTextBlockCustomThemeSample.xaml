<Page x:Class="MarkdownTextBlockExperiment.Samples.MarkdownTextBlockCustomThemeSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MarkdownTextBlockExperiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!--  Markdown Preview  -->
        <ScrollViewer Grid.Column="0"
                      Margin="0,0,8,0">
            <controls:MarkdownTextBlock x:Name="MarkdownTextBlock"
                                        Margin="12"
                                        Config="{x:Bind MarkdownConfig, Mode=OneTime}"
                                        Text="{x:Bind MarkdownText, Mode=OneWay}" />
        </ScrollViewer>

        <!--  Theme Editor Panel  -->
        <Border Grid.Column="1"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">
            <ScrollViewer>
                <StackPanel Padding="12"
                            Spacing="12">
                    <TextBlock FontSize="18"
                               FontWeight="SemiBold"
                               Text="Theme Editor" />
                    <TextBlock FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="Changes apply instantly" />

                    <!--  Actions  -->
                    <StackPanel Orientation="Horizontal"
                                Spacing="8">
                        <Button Click="ResetTheme_Click"
                                Content="Reset to Defaults" />
                        <Button Click="ApplyTheme_Click"
                                Content="Apply Changes"
                                Style="{ThemeResource AccentButtonStyle}" />
                    </StackPanel>

                    <!--  Headings Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              IsExpanded="True">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Headings" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="H1 Font Size"
                                       Maximum="48"
                                       Minimum="8"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind H1FontSize, Mode=TwoWay}" />
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="H1 Color"
                                      SelectedIndex="{x:Bind H1ColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="DodgerBlue" />
                                <ComboBoxItem Content="Coral" />
                                <ComboBoxItem Content="MediumSeaGreen" />
                                <ComboBoxItem Content="Gold" />
                                <ComboBoxItem Content="Orchid" />
                                <ComboBoxItem Content="Default (Primary)" />
                            </ComboBox>
                            <NumberBox Header="H2 Font Size"
                                       Maximum="48"
                                       Minimum="8"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind H2FontSize, Mode=TwoWay}" />
                            <NumberBox Header="H3 Font Size"
                                       Maximum="48"
                                       Minimum="8"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind H3FontSize, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  Text Styling Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Text Styling" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Bold Font Weight"
                                      SelectedIndex="{x:Bind BoldFontWeightIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Bold" />
                                <ComboBoxItem Content="SemiBold" />
                                <ComboBoxItem Content="Medium" />
                                <ComboBoxItem Content="Normal" />
                                <ComboBoxItem Content="ExtraBold" />
                            </ComboBox>
                        </StackPanel>
                    </Expander>

                    <!--  Inline Code Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Inline Code" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Font Size"
                                       Maximum="24"
                                       Minimum="8"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind InlineCodeFontSize, Mode=TwoWay}" />
                            <NumberBox Header="Padding"
                                       Maximum="16"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind InlineCodePadding, Mode=TwoWay}" />
                            <NumberBox Header="Corner Radius"
                                       Maximum="16"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind InlineCodeCornerRadius, Mode=TwoWay}" />
                            <NumberBox Header="Border Thickness"
                                       Maximum="4"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind InlineCodeBorderThickness, Mode=TwoWay}" />
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Foreground Color"
                                      SelectedIndex="{x:Bind InlineCodeColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Orange" />
                                <ComboBoxItem Content="Coral" />
                                <ComboBoxItem Content="LimeGreen" />
                                <ComboBoxItem Content="DeepSkyBlue" />
                                <ComboBoxItem Content="Default (Primary)" />
                            </ComboBox>
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Background Color"
                                      SelectedIndex="{x:Bind InlineCodeBackgroundColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Blue Tint" />
                                <ComboBoxItem Content="Dark Tint" />
                                <ComboBoxItem Content="Black Tint" />
                                <ComboBoxItem Content="Green Tint" />
                                <ComboBoxItem Content="Default (Theme)" />
                            </ComboBox>
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Border Color"
                                      SelectedIndex="{x:Bind InlineCodeBorderColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="SlateGray" />
                                <ComboBoxItem Content="DimGray" />
                                <ComboBoxItem Content="DarkSlateGray" />
                                <ComboBoxItem Content="MediumSlateBlue" />
                                <ComboBoxItem Content="Transparent" />
                            </ComboBox>
                        </StackPanel>
                    </Expander>

                    <!--  Code Block Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Code Blocks" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Padding"
                                       Maximum="24"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind CodeBlockPadding, Mode=TwoWay}" />
                            <NumberBox Header="Corner Radius"
                                       Maximum="16"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind CodeBlockCornerRadius, Mode=TwoWay}" />
                            <NumberBox Header="Border Thickness"
                                       Maximum="4"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind CodeBlockBorderThickness, Mode=TwoWay}" />
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Font Family"
                                      SelectedIndex="{x:Bind CodeBlockFontIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Cascadia Code" />
                                <ComboBoxItem Content="Consolas" />
                                <ComboBoxItem Content="Courier New" />
                                <ComboBoxItem Content="Segoe UI" />
                            </ComboBox>
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Background Color"
                                      SelectedIndex="{x:Bind CodeBlockBackgroundColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Blue Tint" />
                                <ComboBoxItem Content="Dark Tint" />
                                <ComboBoxItem Content="Black Tint" />
                                <ComboBoxItem Content="Green Tint" />
                                <ComboBoxItem Content="Default (Theme)" />
                            </ComboBox>
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Border Color"
                                      SelectedIndex="{x:Bind CodeBlockBorderColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="SlateGray" />
                                <ComboBoxItem Content="DimGray" />
                                <ComboBoxItem Content="DarkSlateGray" />
                                <ComboBoxItem Content="MediumSlateBlue" />
                                <ComboBoxItem Content="Transparent" />
                            </ComboBox>
                        </StackPanel>
                    </Expander>

                    <!--  Quote Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Block Quotes" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Border Width"
                                       Maximum="12"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind QuoteBorderWidth, Mode=TwoWay}" />
                            <NumberBox Header="Padding"
                                       Maximum="24"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind QuotePadding, Mode=TwoWay}" />
                            <NumberBox Header="Corner Radius"
                                       Maximum="16"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind QuoteCornerRadius, Mode=TwoWay}" />
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Border Color"
                                      SelectedIndex="{x:Bind QuoteColorIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="DodgerBlue" />
                                <ComboBoxItem Content="Gray" />
                                <ComboBoxItem Content="MediumSeaGreen" />
                                <ComboBoxItem Content="Coral" />
                            </ComboBox>
                        </StackPanel>
                    </Expander>

                    <!--  Table Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Tables" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Cell Padding"
                                       Maximum="16"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind TableCellPadding, Mode=TwoWay}" />
                            <NumberBox Header="Border Thickness"
                                       Maximum="4"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind TableBorderThickness, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  Horizontal Rule Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Horizontal Rule" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Thickness"
                                       Maximum="8"
                                       Minimum="1"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind HorizontalRuleThickness, Mode=TwoWay}" />
                            <NumberBox Header="Vertical Margin"
                                       Maximum="32"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind HorizontalRuleMargin, Mode=TwoWay}" />
                        </StackPanel>
                    </Expander>

                    <!--  Images Section  -->
                    <Expander HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch">
                        <Expander.Header>
                            <TextBlock FontWeight="SemiBold"
                                       Text="Images" />
                        </Expander.Header>
                        <StackPanel Spacing="8">
                            <NumberBox Header="Max Width (0 = no limit)"
                                       Maximum="1000"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind ImageMaxWidth, Mode=TwoWay}" />
                            <NumberBox Header="Max Height (0 = no limit)"
                                       Maximum="1000"
                                       Minimum="0"
                                       SpinButtonPlacementMode="Compact"
                                       Value="{x:Bind ImageMaxHeight, Mode=TwoWay}" />
                            <ComboBox HorizontalAlignment="Stretch"
                                      Header="Stretch"
                                      SelectedIndex="{x:Bind ImageStretchIndex, Mode=TwoWay}">
                                <ComboBoxItem Content="Uniform" />
                                <ComboBoxItem Content="None" />
                                <ComboBoxItem Content="Fill" />
                                <ComboBoxItem Content="UniformToFill" />
                            </ComboBox>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
