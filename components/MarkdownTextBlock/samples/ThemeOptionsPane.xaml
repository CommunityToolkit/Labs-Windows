<UserControl x:Class="MarkdownTextBlockExperiment.Samples.ThemeOptionsPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:MarkdownTextBlockExperiment.Samples"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="12">
            <!--  Actions  -->
            <StackPanel Orientation="Horizontal"
                        Spacing="8">
                <Button Click="ResetTheme_Click"
                        Content="Reset to Defaults" />
                <Button Click="ApplyTheme_Click"
                        Content="Apply Changes"
                        Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>

            <!--  Headings Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch"
                           IsExpanded="True">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Headings" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="H1FontSizeBox"
                               Header="H1 Font Size"
                               Maximum="48"
                               Minimum="8"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <ComboBox x:Name="H1ColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="H1 Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="DodgerBlue" />
                        <ComboBoxItem Content="Coral" />
                        <ComboBoxItem Content="MediumSeaGreen" />
                        <ComboBoxItem Content="Gold" />
                        <ComboBoxItem Content="Orchid" />
                        <ComboBoxItem Content="Default (Primary)" />
                    </ComboBox>
                    <NumberBox x:Name="H2FontSizeBox"
                               Header="H2 Font Size"
                               Maximum="48"
                               Minimum="8"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="H3FontSizeBox"
                               Header="H3 Font Size"
                               Maximum="48"
                               Minimum="8"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                </StackPanel>
            </muxc:Expander>

            <!--  Text Styling Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Text Styling" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <ComboBox x:Name="BoldFontWeightComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Bold Font Weight"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Bold" />
                        <ComboBoxItem Content="SemiBold" />
                        <ComboBoxItem Content="Medium" />
                        <ComboBoxItem Content="Normal" />
                        <ComboBoxItem Content="ExtraBold" />
                    </ComboBox>
                </StackPanel>
            </muxc:Expander>

            <!--  Inline Code Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Inline Code" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="InlineCodeFontSizeBox"
                               Header="Font Size"
                               Maximum="24"
                               Minimum="8"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="InlineCodePaddingBox"
                               Header="Padding"
                               Maximum="16"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="InlineCodeCornerRadiusBox"
                               Header="Corner Radius"
                               Maximum="16"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="InlineCodeBorderThicknessBox"
                               Header="Border Thickness"
                               Maximum="4"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <ComboBox x:Name="InlineCodeColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Foreground Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Orange" />
                        <ComboBoxItem Content="Coral" />
                        <ComboBoxItem Content="LimeGreen" />
                        <ComboBoxItem Content="DeepSkyBlue" />
                        <ComboBoxItem Content="Default (Primary)" />
                    </ComboBox>
                    <ComboBox x:Name="InlineCodeBackgroundColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Background Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Blue Tint" />
                        <ComboBoxItem Content="Dark Tint" />
                        <ComboBoxItem Content="Black Tint" />
                        <ComboBoxItem Content="Green Tint" />
                        <ComboBoxItem Content="Default (Theme)" />
                    </ComboBox>
                    <ComboBox x:Name="InlineCodeBorderColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Border Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="SlateGray" />
                        <ComboBoxItem Content="DimGray" />
                        <ComboBoxItem Content="DarkSlateGray" />
                        <ComboBoxItem Content="MediumSlateBlue" />
                        <ComboBoxItem Content="Transparent" />
                    </ComboBox>
                </StackPanel>
            </muxc:Expander>

            <!--  Code Block Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Code Blocks" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="CodeBlockPaddingBox"
                               Header="Padding"
                               Maximum="24"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="CodeBlockCornerRadiusBox"
                               Header="Corner Radius"
                               Maximum="16"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="CodeBlockBorderThicknessBox"
                               Header="Border Thickness"
                               Maximum="4"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <ComboBox x:Name="CodeBlockFontComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Font Family"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Cascadia Code" />
                        <ComboBoxItem Content="Consolas" />
                        <ComboBoxItem Content="Courier New" />
                        <ComboBoxItem Content="Segoe UI" />
                    </ComboBox>
                    <ComboBox x:Name="CodeBlockBackgroundColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Background Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Blue Tint" />
                        <ComboBoxItem Content="Dark Tint" />
                        <ComboBoxItem Content="Black Tint" />
                        <ComboBoxItem Content="Green Tint" />
                        <ComboBoxItem Content="Default (Theme)" />
                    </ComboBox>
                    <ComboBox x:Name="CodeBlockBorderColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Border Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="SlateGray" />
                        <ComboBoxItem Content="DimGray" />
                        <ComboBoxItem Content="DarkSlateGray" />
                        <ComboBoxItem Content="MediumSlateBlue" />
                        <ComboBoxItem Content="Transparent" />
                    </ComboBox>
                </StackPanel>
            </muxc:Expander>

            <!--  Quote Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Block Quotes" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="QuoteBorderWidthBox"
                               Header="Border Width"
                               Maximum="12"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="QuotePaddingBox"
                               Header="Padding"
                               Maximum="24"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="QuoteCornerRadiusBox"
                               Header="Corner Radius"
                               Maximum="16"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <ComboBox x:Name="QuoteColorComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Border Color"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="DodgerBlue" />
                        <ComboBoxItem Content="Gray" />
                        <ComboBoxItem Content="MediumSeaGreen" />
                        <ComboBoxItem Content="Coral" />
                    </ComboBox>
                </StackPanel>
            </muxc:Expander>

            <!--  Table Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Tables" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="TableCellPaddingBox"
                               Header="Cell Padding"
                               Maximum="16"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="TableBorderThicknessBox"
                               Header="Border Thickness"
                               Maximum="4"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                </StackPanel>
            </muxc:Expander>

            <!--  Horizontal Rule Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Horizontal Rule" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="HorizontalRuleThicknessBox"
                               Header="Thickness"
                               Maximum="8"
                               Minimum="1"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="HorizontalRuleMarginBox"
                               Header="Vertical Margin"
                               Maximum="32"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                </StackPanel>
            </muxc:Expander>

            <!--  Images Section  -->
            <muxc:Expander HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Stretch">
                <muxc:Expander.Header>
                    <TextBlock FontWeight="SemiBold"
                               Text="Images" />
                </muxc:Expander.Header>
                <StackPanel Spacing="8">
                    <NumberBox x:Name="ImageMaxWidthBox"
                               Header="Max Width (0 = no limit)"
                               Maximum="1000"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <NumberBox x:Name="ImageMaxHeightBox"
                               Header="Max Height (0 = no limit)"
                               Maximum="1000"
                               Minimum="0"
                               SpinButtonPlacementMode="Compact"
                               ValueChanged="OnValueChanged" />
                    <ComboBox x:Name="ImageStretchComboBox"
                              HorizontalAlignment="Stretch"
                              Header="Stretch"
                              SelectionChanged="OnSelectionChanged">
                        <ComboBoxItem Content="Uniform" />
                        <ComboBoxItem Content="None" />
                        <ComboBoxItem Content="Fill" />
                        <ComboBoxItem Content="UniformToFill" />
                    </ComboBox>
                </StackPanel>
            </muxc:Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
