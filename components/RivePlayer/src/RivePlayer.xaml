<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Rive="using:CommunityToolkit.Labs.WinUI.Rive"
                    xmlns:controls="using:CommunityToolkit.Labs.WinUI"
                    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
                    xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Style TargetType="Rive:RivePlayer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Rive:RivePlayer">
                    <ContentPresenter x:Name="SkiaSurface"
                                      Padding="{TemplateBinding Padding}"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      win:AutomationProperties.AccessibilityView="Raw"
                                      Background="{TemplateBinding Background}"
                                      BackgroundSizing="{TemplateBinding BackgroundSizing}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      CornerRadius="{TemplateBinding CornerRadius}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
