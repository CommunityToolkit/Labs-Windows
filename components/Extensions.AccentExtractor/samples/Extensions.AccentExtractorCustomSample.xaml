<Page x:Class="Extensions.AccentExtractorExperiment.Samples.AccentExtractorCustomSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:extensions="using:CommunityToolkit.WinUI.Extensions"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Extensions.AccentExtractorExperiment.Samples"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBox x:Name="UrlTextbox" PlaceholderText="Enter a url"/>
            <Button Content="Set Image" Click="Button_Click"/>
        </StackPanel>

        <Image x:Name="AccentedImage"
               Source="/Extensions.AccentExtractorExperiment.Samples/Assets/icon.png"
               Stretch="UniformToFill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="200"
               Height="200"
               Margin="20"
               Grid.Row="1"
               extensions:AccentExtractor.CalculateAccent="True"/>

        <Rectangle Grid.Column="1" Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="200"
                   Height="200"
                   Margin="20">
            <Rectangle.Fill>
                <SolidColorBrush Color="{x:Bind AccentedImage.(extensions:AccentExtractor.AccentColor), Mode=OneWay}"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Page>
