<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:CommunityToolkit.WinUI.Controls">

    <Style BasedOn="{StaticResource DefaultGradientSliderThumb}"
           TargetType="controls:GradientSliderThumb" />

    <Style x:Key="DefaultGradientSliderThumb" TargetType="controls:GradientSliderThumb">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:GradientSliderThumb">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
